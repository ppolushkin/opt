<div>
  <%= form_tag do %>

        <h3>Регистрация</h3>
        <div class="field">          
          <label for="name">Email:</label><br/>
          <%= text_field_tag :name, params[:name] %>
        </div>
        <div class="field">
          <label for="password">Password:</label><br/>
          <%= password_field_tag :password, params[:password] %>
        </div>
        <div>
          <%= submit_tag "Войти" %>
        </div>

  <% end %>
</div>
