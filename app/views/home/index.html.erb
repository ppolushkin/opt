<body data-ng-app="obelisk" id="top">

<div class="two-lines-block" data-ng-controller="LoginCtrl">

  <div data-ng-show="loggedIn" class="right-block ng-hide">
    <a href="#" data-ng-click="logout()">Выйти</a>
  </div>

  <div data-ng-show="!loggedIn" class="right-block">
    <a href="#" data-ng-click="open()">Войти</a>
  </div>

  <div data-ng-show="loggedIn" class="right-block ng-hide">
    <a href="#">Страницы</a>
  </div>

  <div data-ng-show="loggedIn" class="right-block ng-hide">
    <a href="#">Товары</a>
  </div>

  <div data-ng-show="loggedIn" class="right-block ng-hide">
    <a href="#" data-ng-click="checkSecretPage()">Get Secret page</a>
  </div>

</div>

<div role="navigation" class="navbar navbar-inverse shadow">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="brand-place">
        <a class="navbar-brand brand-font long-brand" href="/">Производственная Компания "Венок"</a>
        <a class="navbar-brand brand-font short-brand" href="/">ПК "Венок"</a>
        <span class="slogan initially-hidden">У нас только трезвые сварщики!</span>
      </div>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right clear-left" data-active-menu-class="active-menu">
        <li><a href="/about_us">О Нас</a></li>
        <li><a href="/ritual_venki">Венки</a></li>
        <li><a href="/ritual_korsinu">Корзины</a></li>
        <li><a href="/goods">Изделия</a></li>
        <li><a href="/may_9">Защитникам Отечества</a></li>
        <li class="hidden-xs hidden-sm"><a href="/novinki">Новинки</a></li>
        <li><a href="/page/contacts">Контакты</a></li>
      </ul>

    </div>
  </div>
</div>

<div data-ng-controller="BasketCtrl">
  <div data-sticky
       class="transparent-basket-block"
       data-ng-if="!isOnBasketPage()">
    <a href="/order#top" class="btn btn-sm btn-primary right-block order-btn hideOnSmall">
      Оформить заказ
    </a>

    <button type="button" class="btn btn-xs btn-danger right-block hideOnSmall" data-ng-click="reset()">
      Сбросить
    </button>

    <div
    class="right-block"
    data-ng-class="{shake : isShaking}">
      <a href="/order#top" class="strong black">
        <span class="hideOnSmall hideOnMedium">Выбрано:</span>
        <span data-ng-bind="basket.namesAmount()"></span> наименований,
        <span data-ng-bind="basket.productsAmount()"></span> товаров,
        <span data-ng-bind="basket.price() + ' р.'"></span>
      </a>
    </div>
  </div>
</div>

<div data-ng-view class="content"></div>

<div class="modal-footer">
  <p class="text-muted">
    Производственная компния "Венок" 2015
  </p>

  <p>
    <a href="/page/links">Ссылки</a>
  </p>
</div>

<%= javascript_include_tag 'application' %>

<script>
    $.noConflict();
    jQuery(document).ready(function() {
        jQuery(".fancybox").fancybox();
    });

    jQuery('.fancybox').fancybox({
        'scrolling': 'no'
    })
</script>

</body>